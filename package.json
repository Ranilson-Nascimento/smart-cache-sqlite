{
  "name": "smart-cache-sqlite",
  "version": "0.2.0",
  "description": "Camada de cache inteligente para SQLite com TTL, LRU, invalidação por tabela, triggers e estratégias cache-first/network-first/stale-while-revalidate.",
  "keywords": [
    "sqlite",
    "cache",
    "lru",
    "ttl",
    "invalidation",
    "better-sqlite3",
    "express",
    "offline-first"
  ],
  "license": "MIT",
  "author": "Ranilson Nascimento",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ranilson-Nascimento/smart-cache-sqlite.git"
  },
  "bugs": {
    "url": "https://github.com/Ranilson-Nascimento/smart-cache-sqlite/issues"
  },
  "homepage": "https://github.com/Ranilson-Nascimento/smart-cache-sqlite#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/Ranilson-Nascimento"
    }
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --external:better-sqlite3 --external:sqlite3 --external:sqlite --external:winston && esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.cjs --external:better-sqlite3 --external:sqlite3 --external:sqlite --external:winston",
    "dev": "tsc -w",
    "lint": "eslint .",
    "test": "vitest run",
    "demo": "node examples/demo-server/server.js",
    "bench": "node --enable-source-maps scripts/benchmark-better-sqlite3.mjs",
    "coverage": "vitest run --coverage",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "better-sqlite3": "^11.5.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.12.0",
    "express": "^5.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "winston": "^3.17.0"
  }
}
